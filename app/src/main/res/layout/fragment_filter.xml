<?xml version="1.0" encoding="utf-8"?><!-- res/layout/fragment_filter.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Lokasi -->
    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_category">

        <!-- Button Jabodetabek -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Button Men's Clothing -->
            <Button
                android:id="@+id/btn_men_clothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Men's Clothing"
                android:textAllCaps="true"
                android:textColor="@color/teal_green"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <!-- Button Women's Clothing -->
            <Button
                android:id="@+id/btn_women_clothing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Women's Clothing"
                android:textAllCaps="true"
                android:textColor="@color/teal_green"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />
        </LinearLayout>


        <!-- Button DKI Jakarta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <!-- Button Electronics -->
            <Button
                android:id="@+id/btn_eletronics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Electronics"
                android:textAllCaps="true"
                android:textColor="@color/teal_green"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <!-- Button Jewelry -->
            <Button
                android:id="@+id/btn_jewelery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Jewelry"
                android:textAllCaps="true"
                android:textColor="@color/teal_green"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Limit"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_category" />

    <LinearLayout
        android:id="@id/layout_limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_limit"
        tools:layout_editor_absoluteX="16dp">

        <!-- Button Limit 5 -->
        <Button
            android:id="@+id/btn_limit_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Limit 5"
            android:textAllCaps="true"
            android:textColor="@color/teal_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <!-- Button Limit 10 -->
        <Button
            android:id="@+id/btn_limit_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Limit 10"
            android:textAllCaps="true"
            android:textColor="@color/teal_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Sort"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_limit" />

    <LinearLayout
        android:id="@+id/layout_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tv_sort"
        tools:layout_editor_absoluteX="16dp">

        <!-- Button Ascending -->
        <TextView
            android:id="@+id/btn_ascending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_ascending"

            android:padding="12dp"
            android:text="Ascending"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/teal_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

        <!-- Button Descending -->
        <TextView
            android:id="@+id/btn_descending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableStart="@drawable/ic_descending"
            android:drawablePadding="3dp"
            android:padding="12dp"
            android:text="Descending"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/teal_green"
            android:textSize="12sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>


    <!-- Tombol Apply -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/background_non_stroke_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_sort">


        <Button
            android:id="@+id/btn_reset_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"

            android:background="@drawable/background_square_corners"
            android:text="Reset "
            android:textColor="@color/black"
            android:textStyle="bold"
            app:backgroundTint="@null">

        </Button>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@color/green"
            android:text="Pakai"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
